# ===== CONFIGURATION ONCOSTREAM =====
# Copier ce fichier en .env et ajuster les valeurs

# === KAFKA ===
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC=ngs-raw-reads
KAFKA_REPLICATION_FACTOR=1

# === HDFS ===
HDFS_NAMENODE=hdfs://namenode:9000
HDFS_OUTPUT_PATH=/oncostream/processed_data_v3
HDFS_REPLICATION=1

# === HBASE ===
HBASE_HOST=hbase
HBASE_PORT=9090
HBASE_TABLE=oncostream_realtime
HBASE_NAMESPACE=default

# === SPARK ===
SPARK_MASTER=spark://spark-master:7077
SPARK_EXECUTOR_MEMORY=1g
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_CORES=2

# === PRODUCER NGS ===
PRODUCER_RATE=10              # Messages par seconde
PRODUCER_DURATION=0           # Dur√©e (0 = infini)
PRODUCER_MUTATION_RATE=0.10   # 10% de mutations

# === DASHBOARD ===
STREAMLIT_PORT=8501
DASHBOARD_REFRESH_INTERVAL=5  # Secondes
DASHBOARD_MAX_ROWS=1000       # Limite d'affichage

# === MONITORING (Optionnel) ===
